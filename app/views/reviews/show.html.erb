<div class="page-header">
  <h3>Review #<%= @review.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @review.user.present? %>
          <a href="/users/<%= @review.user_id %>">
            <%= @review.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Space</dt>
      <dd>
        <% if @review.space.present? %>
          <a href="/spaces/<%= @review.space_id %>">
            <%= @review.space.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Ambience</dt>
      <dd><%= @review.ambience %></dd>

      <dt>Roominess</dt>
      <dd><%= @review.roominess %></dd>

      <dt>Fooddrink</dt>
      <dd><%= @review.fooddrink %></dd>

      <dt>Outlets</dt>
      <dd><%= @review.outlets %></dd>

      <dt>Wifi</dt>
      <dd><%= @review.wifi %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/reviews" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @review.user %>
        <a href="/reviews/<%= @review.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_review/<%= @review.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
